 <% if @registered_application.valid? %>
   $('.js-registered_applications').prepend("<%= escape_javascript(render(@registered_application)) %>");
   $('.new-app').html("<%= escape_javascript(render partial: 'registered_applications/form', locals: { user: @user, registered_application: @new_app }) %>");
   $('.flash').prepend("<div class='alert alert-success'><button type='button' class='close' data-dismiss='alert'>&times;</button><%= flash.now[:notice] %></div>");
 <% else %>
   $('.flash').prepend("<div class='alert alert-danger'><button type='button' class='close' data-dismiss='alert'>&times;</button><%= flash.now[:alert] %></div>");
   $('.new-app').html("<%= escape_javascript(render partial: 'registered_applications/form', locals: { user: @user, registered_application: @registered_application }) %>");
 <% end %>